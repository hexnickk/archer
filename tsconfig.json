{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es5",
    "lib": [
      "es2015",
      "dom"
    ],
    "downlevelIteration": true,
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*",
    "./scanners/**/*",
    "./config/**/*",
    "./archer.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
